# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cad_db
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
CAD_BACKEND_AUTH_TOKEN=fastapi-bridge-secure-token-change-in-production

# SSO Configuration (must match FastAPI backend)
FASTAPI_JWT_SECRET=change-me
FASTAPI_URL=http://localhost:8000
SSO_VALIDATE_REMOTE=false

# External APIs
TELNYX_API_KEY=your_telnyx_api_key
METRIPORT_API_KEY=your_metriport_api_key
TRANSPORTLINK_API_KEY=your_transportlink_api_key
ZOLL_API_KEY=your_zoll_api_key

# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Socket.io
SOCKET_IO_CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info
SENTRY_DSN=

# Features
ENABLE_REPEAT_PATIENT_DETECTION=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_METRIPORT_SYNC=true
